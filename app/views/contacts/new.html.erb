<%= form_tag '/contacts/create', method: :post do %>
<div>
  <%= label_tag :first_name, "enter first name" %>
  <%= text_field_tag :first_name %>
</div>

<div>
  <%= label_tag :last_name, "enter last name" %>
  <%= text_field_tag :last_name %>
</div>

<div>
  <%= label_tag :email, "enter email" %>
  <%= text_field_tag :email %>
</div>
<div>
  <%= label_tag :phone_number, "enter phone number" %>
  <%= text_field_tag :phone_number %>
</div>

<div>
  <%= label_tag :address, "enter address" %>
  <%= text_field_tag :address %>
</div>

<div>
  <%= submit_tag "submit here" %>
</div>

<% end %>
