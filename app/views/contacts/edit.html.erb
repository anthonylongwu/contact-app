<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
<div>
  <%= label_tag :first_name, "enter first name" %>
  <%= text_field_tag :first_name, @contact.first_name %>
</div>

<div>
  <%= label_tag :last_name, "enter last name" %>
  <%= text_field_tag :last_name, @contact.last_name %>
</div>

<div>
  <%= label_tag :email, "enter email of contact" %>
  <%= text_field_tag :email %>
</div>
<div>
  <%= label_tag :phone_number, "enter phone_number of contact" %>
  <%= text_field_tag :phone_number %>
</div>

<div>
  <%= submit_tag "update contact" %>
</div>
<h2>
<% end %>
